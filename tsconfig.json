{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
  },
  "include": [
    "./src/**/*",
    "./types/**/*",
  ],
  "exclude": [
    "./node_modules",
  ]
}
